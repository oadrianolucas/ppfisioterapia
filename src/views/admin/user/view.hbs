{{>_nav}}
<div class="container col-6m">
    <div class="col-md-8 offset-md-2">
        <div class="row mb-3">
            <div class="col-md-9">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb p-2 pl-2">
                        <li class="breadcrumb-item"><a href="/admin/users">Cadastros</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Visualizar</li>
                    </ol>
                </nav>
            </div>
            <div class="col-md-3 text-right">
                <button class="btn d-block w-100 btn-primary" data-toggle="modal" data-target="#editUser">
                    <i class="ri-pencil-fill"></i> Editar
                </button>
            </div>
        </div>
        <div class="card-body border rounded">
            <input type="hidden" value="{{user.id}}" name="id">
            <dl>
                <dt>Dados</dt>
                <dd class="text-uppercase"> Nome: {{user.name}}</dd>
                <dd class="text-uppercase"> Nascimento: {{user.birth}}</dd>
                <dd class="text-uppercase"> WhatsApp: {{user.phone}}</dd>
                <hr>
                <dt> Localidade</dt>
                <dd> Cep: {{user.Address.zipcode}}</dd>
                <dd class="text-uppercase"> Endereço: {{user.Address.address}}</dd>
                <dd class="text-uppercase"> Bairro: {{user.Address.district}}</dd>
                <dd class="text-uppercase"> Cidade: {{user.Address.city}}</dd>
                <dd class="text-uppercase"> Estado: {{user.Address.state}}</dd>
                <dd class="text-uppercase"> Numero: {{user.Address.number}}</dd>
                <hr>
                <dt> Observações</dt>
                <dd class="text-uppercase"> {{user.note}}</dd>
            </dl>
        </div>
    </div>
    {{>_footer}}
</div>

<!-- Editar user -->
<div class="modal fade bd-example-modal-lg" id="editUser" tabindex="-1" aria-labelledby="editUser" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editUser">Editar Cadastro:</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form action="/create/user" method="POST" class="p-3">
                <div class="form-group">
                    <label for="name">Nome:</label>
                    <input class="form-control text-uppercase" type="text" name="name" value="{{user.name}}" required>
                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="form-group">
                            <label for="nascimento">Nascimento:</label>
                            <input class="form-control" type="text" placeholder="00/00/0000" data-mask="00/00/0000"
                                name="birth" value="{{user.birth}}" required>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label for="whatsapp">WhatsApp:</label>
                            <input class="form-control" type="text" placeholder="(11)00000-0000" id="phone"
                                value="{{user.phone}}" name="phone" required>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group">
                            <label for="mae">Cpf:</label>
                            <input class="form-control" type="text" id="cpf" value="{{user.cpf}}" name="cpf"
                                placeholder="000.000.000-00" required>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-6 col-md-4">
                        <label for="cep">Cep:</label>
                        <input class="form-control" type="text" id="cep" value="{{user.Address.zipcode}}"
                            placeholder="00000-000" name="zipcode" required>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="endereco">Endereço:</label>
                        <input type="text" class="form-control" value="{{user.Address.address}}" id="logradouro"
                            name="address" readonly>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="bairro">Bairro:</label>
                        <input type="text" class="form-control" value="{{user.Address.district}}" id="bairro"
                            name="district" readonly>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="cidade">Cidade:</label>
                        <input type="text" class="form-control" value="{{user.Address.city}}" id="localidade"
                            name="city" readonly>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="estado">Estado:</label>
                        <input type="text" class="form-control" value="{{user.Address.state}}" id="uf" name="state"
                            readonly>
                    </div>
                    <div class="col-6 col-md-4">
                        <label for="numero">Numero:</label>
                        <input class="form-control" type="text" value="{{user.Address.number}}" name="number" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="obs">Obs:</label>
                    <textarea class="form-control text-uppercase" type="text" value="{{user.note}}"
                        name="note"></textarea>
                </div>
                <button class="btn btn-dark" type="reset">Limpar</button>
                <button class="btn btn-primary" type="submit">Cadastrar</button>
            </form>
        </div>
    </div>
</div>